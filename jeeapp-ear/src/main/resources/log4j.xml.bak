<?xml version="1.0" encoding="UTF-8"?>
<configuration status="debug" strict="true" name="XMLConfigTest" packages="org.apache.logging.log4j.test">
    
    <!-- Console appender, for testing -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="DEBUG" />
        <layout class="org.apache.log4j.PatternLayout">
           <param name="ConversionPattern" value="%-5p %d{ABSOLUTE} %c:%L - %m%n" />
        </layout>
    </appender>

    <!-- File appender for application logging --> 
    <appender name="LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="Threshold" value="DEBUG" />        
        <param name="File" value="/logs/jeeapp/jeeapp.log" /> 
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <param name="append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d{ABSOLUTE} %c:%L - %m%n" />
        </layout>
    </appender>
	
    <category name="org.madbit" additivity="false">
        <priority value="DEBUG" />
        <appender-ref ref="LOG" />
        <appender-ref ref="CONSOLE" />
    </category>
	
    <!-- Root category level setting -->
    <root>
        <priority value="ERROR" />
        <appender-ref ref="LOG" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>